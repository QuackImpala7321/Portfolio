{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "manifest",
    "type": "object",
    "required": [ "name", "short_description", "description" ],
    "properties": {
        "name": {
            "type": "string"
        },
        "short_description": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "source": {
            "type": "string"
        },
        "downloads": {
            "type": "string"
        }
    }
}